{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2017",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "declaration": false,
    "allowJs": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["types", "src"]
}
